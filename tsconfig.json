{
  "include": ["scripts", "src", "tests"],
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "resolvePackageJsonImports": true,
    "typeRoots": ["#types", "node_modules/@types"],

    "allowImportingTsExtensions": true,

    "allowJs": false,
    "strict": true,
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,

    "declaration": false,
    "noEmitOnError": true,
    "pretty": true,
    "sourceMap": true,

    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    "plugins": [
      {
        "name": "gql.tada/ts-plugin",
        "trackFieldUsage": false,
        "schemas": [
          // API
          {
            "name": "self",
            "schema": "./src/graphql/schemas/schema.gql",
            "tadaOutputLocation": "./types/graphql/schema-env.d.ts"
          },
          // Clients
          {
            "name": "partner",
            "schema": "./scripts/graphql/dist/partner-schema.gql",
            "tadaOutputLocation": "./types/graphql/clients-partner-env.d.ts"
          }
        ]
      }
    ]
  }
}
