{
  "name": "swan-api-starter-kit",
  "version": "0.0.0",
  "description": "A starter kit for building an internal application",
  "main": "src/index.js",
  "author": "bloodyowl <bloodyowl@swan.io>",
  "type": "module",
  "private": true,
  "scripts": {
    "generate-schemas": "gql-tada generate-output",
    "codegen": "prisma generate && prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script > prisma/generated.sql",
    "postinstall": "yarn generate-schemas",
    "update-feature-flags": "tggl typing -o types/tggl/index.d.ts -k $TGGL_SERVER_KEY",
    "generate-sub-schemas": "node --no-warnings --experimental-strip-types --env-file=.env src/graphql/schema.mts",
    "get-test-token": "node --no-warnings --experimental-strip-types scripts/tokens/getTestToken.mts",
    "setup": "prisma migrate dev",
    "reset": "prisma migrate reset",
    "migrate-deploy": "prisma migrate deploy",
    "lint": "eslint",
    "typecheck": "tsc",
    "format": "prettier 'src/**/*' --ignore-unknown --write",
    "dev": "node --no-warnings --experimental-strip-types --watch --env-file=.env --import ./src/tracing.mts src/index.mts",
    "start": "node --no-warnings --experimental-strip-types --import ./src/tracing.mts src/index.mts",
    "test": "node --no-warnings --experimental-strip-types src/tests/setupTestDatabaseTemplate.mts && node --no-warnings --experimental-strip-types --env-file=.env.test --test --test-concurrency=true --test-reporter=spec src/**/*.test.mts",
    "test-watch": "node --no-warnings --experimental-strip-types src/tests/setupTestDatabaseTemplate.mts && node --no-warnings --experimental-strip-types --env-file=.env.test --test --test-concurrency=true  --test-reporter=spec --watch src/**/*.test.mts",
    "configure-hooks": "git config --local core.hooksPath .hooks"
  },
  "imports": {
    "#app/*": "./src/*",
    "#types/*": "./types/*"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.9.3",
    "@envelop/graphql-jit": "^8.0.3",
    "@fastify/cors": "^10.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/core": "^1.27.0",
    "@opentelemetry/instrumentation": "^0.54.0",
    "@opentelemetry/instrumentation-fastify": "^0.41.0",
    "@opentelemetry/instrumentation-http": "^0.54.0",
    "@opentelemetry/instrumentation-pino": "^0.43.0",
    "@opentelemetry/propagator-jaeger": "^1.27.0",
    "@opentelemetry/resources": "^1.27.0",
    "@opentelemetry/sdk-trace-base": "^1.27.0",
    "@opentelemetry/sdk-trace-node": "^1.27.0",
    "@opentelemetry/semantic-conventions": "^1.27.0",
    "@pothos/core": "^4.3.0",
    "@pothos/plugin-dataloader": "^4.2.0",
    "@pothos/plugin-directives": "^4.1.0",
    "@pothos/plugin-errors": "^4.2.0",
    "@pothos/plugin-federation": "^4.2.0",
    "@pothos/plugin-relay": "^4.3.0",
    "@pothos/plugin-scope-auth": "^4.1.0",
    "@pothos/plugin-simple-objects": "^4.1.0",
    "@pothos/plugin-sub-graph": "^4.2.0",
    "@pothos/plugin-tracing": "^1.1.0",
    "@swan-io/boxed": "^3.1.2",
    "accept-language": "^3.0.20",
    "dataloader": "^2.2.2",
    "fastify": "^5.0.0",
    "gql.tada": "^1.8.10",
    "graphql": "^16.9.0",
    "graphql-scalars": "^1.23.0",
    "graphql-yoga": "^5.8.0",
    "intl-messageformat": "^10.7.6",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "kysely": "^0.27.4",
    "pg": "^8.13.1",
    "pino-pretty": "^11.3.0",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prom-client": "^15.1.3",
    "tggl-client": "^1.17.2",
    "ts-pattern": "^5.5.0",
    "valienv": "^0.7.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.0",
    "@eslint/js": "^9.14.0",
    "@prisma/migrate": "^5.21.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.4",
    "@types/pg": "^8.11.10",
    "eslint": "^9.14.0",
    "kysely-pglite-dialect": "^1.0.5",
    "prisma": "^5.21.1",
    "prisma-kysely": "^1.8.0",
    "tggl-cli": "^1.4.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  }
}
